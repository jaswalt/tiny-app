<% include ./partials/_header %>

<body>
    <h2>URLs</h2>
      <% if (!user) { %>
        <p>Please login to see your URLs.</p>
      <% } %>
      <ul>
        <% for(url in urls) { %>
          <li>
            <%= url %> : <%= urls[url].longURL %>
          </li>
          <a href="/urls/<%= url %>">Edit</a>
          <form action="/urls/<%= url %>/delete" method="POST">
            <input type="submit" value="Delete">
          </form>
        <% }; %>
      </ul>

      <p><a href="/urls/new">Shorten New Link</a></p>

</body>